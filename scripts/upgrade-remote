#!/usr/bin/env ansible-playbook
# vim: set ft=yaml.ansible:
# usage: ./scripts/upgrade-remote.yaml
---
- hosts: home,ec2
  vars_files:
    - ../secrets.yaml
  vars:
    ansible_become_password: "{{ secret_luizribeiro_initial_password }}"
  become: true
  tasks:
    - name: Upgrade pacman packages
      pacman:
        update_cache: true
        upgrade: true
    - name: Upgrade AUR packages
      aur:
        upgrade: true
        aur_only: true
