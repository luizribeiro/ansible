geo $authentication {
  default "{{ inventory_hostname }} authentication";
  127.0.0.1 "off";
  192.168.1.0/24 "off";
}

upstream gwsocket {
  server 127.0.0.1:7890;
}

server {
  listen 443 ssl;
  server_name {{ inventory_hostname }} {{ inventory_hostname_short }};
  ssl_certificate /etc/letsencrypt/live/{{ inventory_hostname }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ inventory_hostname }}/privkey.pem;
  include /etc/letsencrypt/options-ssl-nginx.conf;
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

  auth_request /oauth2/auth;
  error_page 401 /oauth2/sign_in;

	location / {
    root /srv/http/host/;
    autoindex on;
	}

  ###############################
  # oauth2_proxy
  location /oauth2 {
    proxy_pass http://127.0.0.1:4180;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Scheme $scheme;
    proxy_set_header X-Auth-Request-Redirect $request_uri;
  }

  location = /oauth2/auth {
    proxy_pass http://127.0.0.1:4180;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Scheme $scheme;
    # nginx auth_request includes headers but not body
    proxy_set_header Content-Length "";
    proxy_pass_request_body off;
  }

  location ~ /oauth2/(sign_in|start|callback)$ {
    proxy_pass http://127.0.0.1:4180;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Scheme $scheme;
    auth_request off;
  }

  ###############################
  # nginx status
  location /nginx_status {
    stub_status on;
    access_log off;
  }

  ###############################
  # goaccess
	location /goaccess/ws {
    proxy_pass http://127.0.0.1:7890/ws;
    proxy_connect_timeout 5m;
    proxy_send_timeout 5m;
    proxy_read_timeout 5m;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Connection "keep-alive";
    proxy_pass_request_headers on;
    proxy_http_version 1.1;
	}

  include /etc/nginx/conf.d/10-host.d/*.conf;

  ###############################
  # public directories
  location ~ ^/~(.+?)(/.*)?$ {
    alias /home/$1/www$2;
    index index.html index.htm;
    autoindex on;
    auth_request off;
  }
}

server {
  listen 80;
  server_name {{ inventory_hostname }} {{ inventory_hostname_short }};
  return 301 https://$host$request_uri;
}
